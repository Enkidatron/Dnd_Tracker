<div class="jumbotron">
	<h2>DnD Tracker</h2>
	<p class="lead">DnD Tracker! Track things!</p>
</div>

<%= if @current_user do %>
	<p>Welcome, <%= @current_user[:name] %>!</p>
	<p>Go to your <%= link "DnD Tracker", to: page_path(@conn, :index) %></p>
	<p><%= link "Logout", to: auth_path(@conn, :delete), method: :delete, class: "btn btn-danger" %></p>
<% else %>
	<%= link to: auth_path(@conn, :index, "google"), class: "btn btn-primary" do %>
	Sign in with Google
	<% end %>
<% end %>